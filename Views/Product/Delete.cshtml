@model Product

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Delete Product</h2>
    </div>

    <form method="delete" asp-action="DeleteProd">
        <input asp-for="ProductId" hidden />
        <div asp-validation-summary="All"></div>

            <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="ProductId">ProductId</label>
                <input type="text" class="form-control mb-3" asp-for="ProductId" disabled>
                <span asp-validation-for="ProductId" class=" alert-danger"></span>
            </div>        
            <div class="form-group col-md-6">
                <label asp-for="ProductName">ProductName</label>
                <input type="text" class="form-control mb-3" asp-for="ProductName" disabled>
                <span asp-validation-for="ProductName" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="CategoryId">CategoryId</label>
                <input type="text" class="form-control mb-3" asp-for="CategoryId" disabled>
                <span asp-validation-for="CategoryId" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CategoryName">CategoryName</label>
                <input type="text" class="form-control mb-3" asp-for="CategoryName" disabled>
                <span asp-validation-for="CategoryName" class=" alert-danger"></span>
            </div>
        </div>
         

        <button type="submit" class="btn btn-lg btn-danger p-2"><i class="bi bi-trash-fill"></i>DeleteProd</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}