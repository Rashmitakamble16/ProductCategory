@model Product

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit Product</h2>
    </div>

    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="ProductId">ProductId</label>
                <input type="text" class="form-control mb-3" asp-for="ProductId">
                <span asp-validation-for="ProductId" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="ProductName">ProductName</label>
                <input type="text" class="form-control mb-3" asp-for="ProductName">
                <span asp-validation-for="ProductName" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="CategoryId">CategoryId</label>
                <input type="text" class="form-control mb-3" asp-for="CategoryId">
                <span asp-validation-for="CategoryId" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CategoryName">CategoryName</label>
                <input type="text" class="form-control mb-3" asp-for="CategoryName">
                <span asp-validation-for="CategoryName" class=" alert-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Update</button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}